{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Name": {
      "type": "string"
    },
    "Price": {
      "type": "float"
    },
    "Images": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": true
    },
    "Discount": {
      "type": "boolean"
    },
    "DiscountAmount": {
      "type": "integer",
      "min": 0,
      "max": 100,
      "default": 0
    },
    "Description": {
      "type": "richtext"
    }
  }
}
